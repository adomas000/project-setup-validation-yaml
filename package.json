  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^20.2.3",
    "@types/sinon": "^10.0.15",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "mocha": "^10.2.0",
    "mock-fs": "^5.2.0",
    "sinon": "^15.1.0",
    "ts-node": "^10.9.1",
